#include <iostream>
using namespace std;

template <typename X>
class queue_sll
{   struct node
{
  public: X data;
          node* next;
};
    private: node* front;
             node* rear;
    public: 
    X n1;
    queue_sll()
    {
     front=NULL;
     rear=NULL;
    }
    void clear()
    {  cout<<"clearing stack"<<endl;
        node* ptr=new node;
        node* temp=new node;
        ptr=front;
        while(ptr!=NULL)
        {
            temp=ptr->next;
            delete ptr;
            ptr=temp;
        }
       front=NULL;
   }
   void enqueue()
   {
       cout<<"enter data to enqueue"<<endl;
                cin>>n1;
                 node* temp=new node;
                 temp->data=n1;
                 temp->next=NULL;
                 if(isempty())
                 {
                     front=temp;
                     rear=temp;
                 }
                 else
                 {
                     rear->next=temp;
                     rear=temp;
                 }
   }
   void dequeue()
   {
       if(isempty())
               {
                   cout<<"queue is empty"<<endl;
               }
               else
               {   cout<<"dequeuing"<<endl;
                   node* ptr=new node;
                   ptr=front;
                   front=ptr->next;
                   ptr=NULL;
               }
   }
   int top_ele()
   {   cout<<"first element of queue is: ";
       return front->data;
   }
   bool isempty()
             {
                 if(front==NULL)
                 {
                     return true;
                 }
                 else
                 {
                     return false;
                 }
             }
     void display()
             {
                node* ptr=new node;
                ptr=front;
                if(isempty())
                {
                    cout<<"queue is empty"<<endl;
                }
                else
                {   cout<<"your entered queue is"<<endl;
                while(ptr!=NULL)
                {
                    cout<<ptr->data<<" ";
                    ptr=ptr->next;
                }
                }
                cout<<endl;
             }
};
int main()
{   int n=0;
   queue_sll<int> obj;
    int choice,flag=1;
   
 while(flag==1)
 {  cout<<"press 0 for exit"<<endl;
    cout<<"press 1 for displaying queue"<<endl;
    cout<<"press 2 for enqueuing"<<endl;
    cout<<"press 3 for dequeuing"<<endl;
    cout<<"press 4 for printing top element of the queue"<<endl;
    cout<<"press 5 to check that queue is empty or not"<<endl;
    cout<<"press 6 for clearing the queue"<<endl;
    cin>>choice;
    switch(choice)
    {
        case 0: flag=0;
                break;
        case 1: 
                obj.display();
                break;
        case 2:
            
                obj.enqueue();
                break;
        case 3: 
                obj.dequeue();
                break;
        case 4: 
                cout<<obj.top_ele()<<endl;
                break;
        case 5:
              if(obj.isempty())
              {
                cout<<"queue is empty"<<endl;    
              }
              else
              {
                  cout<<"queue is not empty"<<endl;
              }
              break;
        case 6:
              obj.clear();
              break;
        default: cout<<"invalid input"<<endl;
        
    }
 }
    return 0;
}
